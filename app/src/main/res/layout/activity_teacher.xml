<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherActivity">

    <TextView
        android:id="@+id/teacherPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- "Create New Assignment" Button -->
    <Button
        android:id="@+id/createAssignmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Assignment"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/teacherPageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- "Create New Quiz" Button -->
    <Button
        android:id="@+id/createQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Quiz"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/createAssignmentButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <Button
        android:id="@+id/viewQuizzesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Quizzes"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/createQuizButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <Button
        android:id="@+id/deleteAllQuizzesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Quizzes"
        app:layout_constraintTop_toBottomOf="@id/viewQuizzesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- New Enroll Button -->
    <Button
        android:id="@+id/enrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll in Institution"
        app:layout_constraintTop_toBottomOf="@id/deleteAllQuizzesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
